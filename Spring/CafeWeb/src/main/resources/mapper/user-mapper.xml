<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mycom.myapp.user.dao.UserDao">

  <select id="findUserByEmail" parameterType="string"
    resultType="com.mycom.myapp.user.dto.UserResponse">
    select id, name, email, password
    from user
    where email = #{email}
  </select>

  <insert id="registerUser" parameterType="com.mycom.myapp.user.dto.RegisterRequest"
    useGeneratedKeys="true"
    keyProperty="id">
    INSERT INTO user (name, email, password)
    VALUES (#{name}, #{email}, #{password})
  </insert>

</mapper>
